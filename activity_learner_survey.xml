<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout
   xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/layout">
        <ImageView
            android:layout_width="260dp"
            android:layout_marginLeft="50dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo_no_background"/>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:backgroundTint="@color/card"
        android:visibility="visible"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/q1"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" You are helping someone who wants to go to your airport, the center of town or railway station. You
would:"
            android:textSize="16dp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:layout_marginTop="100dp"
            android:layout_below="@+id/q1"
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton1A"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="draw, or show her a map, or give her a map."/>

            <RadioButton
                android:textColor="@color/black"
                android:id="@+id/radioButton1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="write down the directions"/>
        </RadioGroup>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        android:backgroundTint="@color/card"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/q2"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" When learning something new, how do you prefer to receive the information?"
            android:textSize="16dp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:layout_marginTop="100dp"
            android:layout_below="@+id/q1"
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton2A"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Watching a video explanation"/>

            <RadioButton
                android:textColor="@color/black"
                android:id="@+id/radioButton2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading a written guide or article"/>
        </RadioGroup>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:backgroundTint="@color/card"
        android:visibility="gone"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/q3"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" How do you usually prepare for exams?"
            android:textSize="16dp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q1"
            android:layout_marginTop="50dp">

            <RadioButton
                android:id="@+id/radioButton3A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watching tutorial videos "
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButton3B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading textbooks or notes"
                android:textColor="@color/black" />
        </RadioGroup>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:backgroundTint="@color/card"
        android:layout_marginTop="230dp"
        android:visibility="gone"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/q4"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" Which method helps you retain information better?"
            android:textSize="16dp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q1"
            android:layout_marginTop="50dp">

            <RadioButton
                android:id="@+id/radioButton4A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seeing the information in videos "
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButton4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Writing notes or reading text "
                android:textColor="@color/black" />
        </RadioGroup>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card5"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:backgroundTint="@color/card"
        android:layout_marginTop="230dp"
        android:visibility="gone"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/q5"
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" When searching for a solution online, what do you prefer?"
            android:textSize="16dp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/radioGroup5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q1"
            android:layout_marginTop="50dp">

            <RadioButton
                android:id="@+id/radioButton5A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watching a step-by-step video "
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radioButton5B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading a detailed article or blog post "
                android:textColor="@color/black" />
        </RadioGroup>
    </com.google.android.material.card.MaterialCardView>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="NEXT"
    android:id="@+id/NEXT"
    android:layout_below="@id/logo"
    android:layout_marginTop="400dp"
    android:layout_marginLeft="130dp"/>
</RelativeLayout>